{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "exit",
          "style": "powerline",
          "foreground": "#100e23",
          "background": "#66cc66",
          "foreground_templates": [
            "{{ if ne .Code 0 }}#eeeeee{{ end }}"
          ],
          "background_templates": [
            "{{ if ne .Code 0 }}#ce1515{{ end }}"
          ],
          "properties": {
            "always_enabled": true,
            "template": "{{ if ne .Code 0 }}{{.Code}}{{ else }}✔{{ end }}"
          }
        },
        {
          "type": "executiontime",
          "style": "powerline",
          "powerline_symbol": "",
          "foreground": "#100e23",
          "background": "#bb88ff",
          "properties": {
            "always_enabled": true,
            "style": "austin"
          }
        },
        {
          "type": "session",
          "style": "powerline",
          "powerline_symbol": "",
          "foreground": "#eeeeee",
          "background": "#c300d4",
          "properties": {
            "template": "{{ if .Root }}Admin{{ end }}"
          }
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "",
          "foreground": "#100e23",
          "background": "#91ddff",
          "properties": {
            "style": "full",
            "folder_separator_icon": "  "
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "",
          "foreground": "#100e23",
          "background": "#66cc66",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#ffeb3b{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ffcc80{{ end }}",
            "{{ if gt .Ahead 0 }}#b388ff{{ end }}",
            "{{ if gt .Behind 0 }}#b388fb{{ end }}"
          ],
          "properties": {
            "branch_icon": " ",
            "fetch_status": true,
            "fetch_stash_count": true,
            "fetch_worktree_count": true,
            "display_stash_count": true,
            "display_status": true,
            "display_status_detail": true,
            "display_worktree_count": true
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "foreground": "#007acc",
          "properties": {
            "time_format": "15:04:05"
          },
          "style": "plain",
          "type": "time"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#eeeeee",
          "properties": {
            "prefix": "",
            "text": "❯"
          }
        }
      ]
    }
  ]
}